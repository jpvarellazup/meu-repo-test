				{
					"name": "Passo 3 - Pegue os dados da SP para montar no payload do passo 4",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();\r",
									"\r",
									"if (Array.isArray(jsonData)) {\r",
									"    var found = false;\r",
									"    for (var i = 0; i < jsonData.length; i++) {\r",
									"        var objeto = jsonData[i];\r",
									"        if (objeto && objeto.product_type === \"mobile\") {\r",
									"            setVariables(objeto);\r",
									"            found = true;\r",
									"            break;\r",
									"        }\r",
									"    }\r",
									"    if (!found) {\r",
									"        setVariables({});\r",
									"    }\r",
									"} else {\r",
									"    if (jsonData && jsonData.product_type === \"mobile\") {\r",
									"        setVariables(jsonData);\r",
									"    } else {\r",
									"        setVariables({});\r",
									"    }\r",
									"}\r",
									"\r",
									"function setVariables(objeto) {\r",
									"    pm.collectionVariables.set(\"productId\", objeto.id || 'N/A');\r",
									"    pm.collectionVariables.set(\"tags\", (objeto.tags && objeto.tags.length > 0) ? objeto.tags.join(',') : 'so:ngn');\r",
									"    pm.collectionVariables.set(\"subscriptionType\", objeto.subscription_type || 'N/A');\r",
									"    pm.collectionVariables.set(\"productType\", objeto.product_type || 'mobile');\r",
									"}"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
