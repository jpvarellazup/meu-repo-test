					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"var url = jsonData.url;",
									"if (url && url.includes(\"jwt=\")) {",
									"    var jwt = url.split(\"jwt=\")[1]?.split(\"&\")[0];",
									"    if (jwt) {",
									"        pm.collectionVariables.set(\"jwt\", jwt);",
									"    } else {",
									"        console.error(\"JWT não encontrado na URL\");",
									"    }",
									"} else {",
									"    console.error(\"Parâmetro 'jwt' não encontrado na URL\");",
									"}"
								],
								"type": "text/javascript",
								"packages": {},
